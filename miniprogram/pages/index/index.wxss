/* pages/index/index.wxss */
.home_container .index_swiper{
  margin: 20rpx;
  border-radius: 10rpx;
  overflow: hidden;
}
.home_container .swiper_item{
  width: 100%;
}
.home_container .tab_btns{
  display: flex;
}
.home_container .s_tabbtn{
  padding: 10rpx 0;
  flex-grow: 1;
  text-align: center;
}
.home_container .s_tabbtn.active{
  border-bottom: 4rpx solid #d4237a;
}
.home_container .new_block{
  padding: 40rpx 0;
  display: flex;
  flex-wrap: wrap;
}
.new_block .s_userbox{
  width: 50%;
}
.s_userbox image{
  width: 90%;
  height: 300rpx;
  display: block;
  margin: 0 auto;
}
.s_userbox .usertitle{
  padding: 10rpx 20rpx;
  color: #d4237a;
  display: flex;
  justify-content: space-between;
}